    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django Serve Port 8000",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver",
                "0.0.0.0:8000"
            ],
            "django": true,
            "autoStartBrowser": true,
            "program": "${workspaceFolder}\\manage.py",
            "justMyCode": true,
            "python": "${workspaceFolder}\\venv\\Scripts\\python.exe"
        },
        {
            "name": "Django Greetings",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "hello",
                "--time=5",
                "--name=Mihai"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}\\manage.py",
            "justMyCode": true,
            "python": "${workspaceFolder}\\venv\\Scripts\\python.exe"
        }
    ]
}
